    "@storybook/addons": "^5.2.7",
    "@storybook/react": "^5.2.7",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-react-app": "^6.0.3",
    "husky": "^3.1.0",
